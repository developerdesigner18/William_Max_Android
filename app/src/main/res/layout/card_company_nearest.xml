<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@drawable/btn_drawable_shadow"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_180sdp">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_180sdp"
                android:background="@android:color/black"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_2sdp"
                android:src="@drawable/img_left_curve" />

            <ImageView
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_alignParentRight="true"
                android:src="@drawable/img_right_top_curv" />

            <ImageView
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/img_left_bottom_curv" />

            <ImageView
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/img_right_bottom_curv" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:gravity="center"
            android:text="HelpHubs"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>