<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp">

            <ImageView
                android:scaleType="centerCrop"
                android:background="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_2sdp"
                android:src="@drawable/img_left_curve" />

            <ImageView
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_alignParentRight="true"
                android:src="@drawable/img_right_top_curv" />

            <ImageView
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/img_left_bottom_curv" />

            <ImageView
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/img_right_bottom_curv" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/round_corner_background_witoutb_5"
            android:gravity="center"
            android:text="Online Deal deal "
            android:textColor="@color/grey_dark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/round_corner_background_witoutb_5"
            android:gravity="center"
            android:text="100$"
            android:textColor="@color/grey_dark" />

    </LinearLayout>
</LinearLayout>