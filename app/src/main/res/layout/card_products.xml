<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@drawable/btn_drawable_shadow"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:background="@android:color/black"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_2sdp"
                android:src="@drawable/img_left_curve" />

            <ImageView
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_alignParentRight="true"
                android:src="@drawable/img_right_top_curv" />

            <ImageView
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/img_left_bottom_curv" />

            <ImageView
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/img_right_bottom_curv" />

            <!--            <TextView-->
            <!--                android:layout_alignParentRight="true"-->
            <!--                android:id="@+id/tv_price"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_alignParentTop="true"-->
            <!--                android:layout_marginLeft="@dimen/_5sdp"-->
            <!--                android:layout_marginRight="@dimen/_5sdp"-->
            <!--                android:layout_marginTop="@dimen/_7sdp"-->
            <!--                android:background="@drawable/round_corner_background_witoutb_5"-->
            <!--                android:padding="@dimen/_5sdp"-->
            <!--                android:backgroundTint="@color/colorPrimary"-->
            <!--                android:text="7000 RS"-->
            <!--                android:textAppearance="@style/TextAppearance.AppCompat.Small"-->
            <!--                android:textColor="@color/grey_dark" />-->

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_7sdp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/grey_dark"/>
    </LinearLayout>

</LinearLayout>